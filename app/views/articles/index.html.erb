<div class="container mt-5">
  <h1 class="mb-4">Articles</h1>

  <ul class="list-group">
    <% @articles.each do |article| %>
      <li class="list-group-item">
        <%= link_to article.title, article, class: "text-decoration-none text-dark" %>
      </li>
    <% end %>
  </ul>

  <a href="<%= new_article_path %>" class="btn btn-primary mt-3">New Article</a>
</div>
