<div class="container mt-5">
  <h1><%= @article.title %></h1>

  <p class="mt-3"><%= @article.content %></p>

  <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-secondary me-2" %>
  <%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger me-2" %>
  <%= link_to 'Back', articles_path, class: "btn btn-primary" %>
</div>
